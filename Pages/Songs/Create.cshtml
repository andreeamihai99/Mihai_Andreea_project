@page
@model Mihai_Andreea_project.Pages.Songs.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Song</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Song.Title" class="control-label"></label>
                <input asp-for="Song.Title" class="form-control" />
                <span asp-validation-for="Song.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.Artist" class="control-label"></label>
                <input asp-for="Song.Artist" class="form-control" />
                <span asp-validation-for="Song.Artist" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.ItunesPrice" class="control-label"></label>
                <input asp-for="Song.ItunesPrice" class="form-control" />
                <span asp-validation-for="Song.ItunesPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.ReleasingDate" class="control-label"></label>
                <input asp-for="Song.ReleasingDate" class="form-control" />
                <span asp-validation-for="Song.ReleasingDate" class="textdanger"></span>
                <label asp-for="Song.RecordLabelID" class="control-label">Record Label Name</label>
                <select asp-for="Song.RecordLabelID" class="form-control" asp-items="ViewBag.RecordLabelID">
                </select>
                <span asp-validation-for="Song.RecordLabelID" class="text-danger"></span>
            </div>

                <div class="form-group">
                    <div class="table">
                        <table>
                            <tr>
                                @{
                                    int cnt = 0;
                                    foreach (var gen in Model.AssignedGenreDataList)
                                    {
                                        if (cnt++ % 3 == 0)
                                        {
                                        @:</tr><tr>
                                        }
                                        @:<td>
                                            <input type="checkbox"
                                                   name="selectedGenres"
                                                   value="@gen.GenreID"
                                                   @(Html.Raw(gen.Assigned ? "checked=\"checked\"" : "")) />
                                            @: @gen.Name
                                        @:</td>
                                    }
                                @:</tr>
                                }
                            </table>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
            </form>
        </div>
        
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
